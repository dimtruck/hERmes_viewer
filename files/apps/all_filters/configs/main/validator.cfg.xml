<?xml version="1.0" encoding="UTF-8"?>
<validators xmlns="http://openrepose.org/repose/validator/v1.0"
            xmlns:xs="http://www.w3.org/2001/XMLSchema"
            multi-role-match="true">

   <validator role="default" dot-output="default.dot" default="true">
      <application xmlns="http://wadl.dev.java.net/2009/02">
        <resources>
          <resource path="/"
                    type="capabilities.wadl.xml#List_Versions
                    capabilities.wadl.xml#List_Version_Details"/>
        </resources>
      </application>
   </validator>

   <validator role="observer" dot-output="observer.dot">
      <application xmlns="http://wadl.dev.java.net/2009/02">
         <resources base="http://localhost:8080">
            <resource path="/"
                      type="capabilities.wadl.xml#List_Servers
                      capabilities.wadl.xml#List_Server"/>
         </resources>
      </application>
   </validator>
   <validator role="identity:user-admin" dot-output="identity-user-admin.dot">
      <application xmlns="http://wadl.dev.java.net/2009/02">
         <resources base="http://localhost:8080">
            <resource path="/"
                      type="capabilities.wadl.xml#List_Servers
                      capabilities.wadl.xml#List_Server
                      capabilities.wadl.xml#Create_Servers"/>
         </resources>
      </application>
   </validator>
   <validator role="admin" dot-output="admin.dot">
      <application xmlns="http://wadl.dev.java.net/2009/02">
         <resources base="http://localhost:8080">
            <resource path="/"
                      type="capabilities.wadl.xml#List_Servers
                      capabilities.wadl.xml#List_Server
                      capabilities.wadl.xml#Create_Servers"/>
         </resources>
      </application>
   </validator>
</validators>
