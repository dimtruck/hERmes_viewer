<?xml version="1.0" encoding="UTF-8"?>

<!-- To configure Repose see: http://wiki.openrepose.org/display/REPOSE/Configuration -->
<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
  <repose-cluster id="repose" rewrite-host-header="false">
    <nodes>
        <% @nodes.each_index do |index| %>
        <node id="repose-<%= index %>" hostname="<%= @nodes[index] %>" http-port="7070"/>
        <% end %>
    </nodes>
    <filters>
      <filter name="http-logging" />
      <filter name="content-normalization" />
      <filter name="header-normalization" />
      <filter name="uri-normalization" />
      <filter name="client-auth" />
      <filter name="header-identity"/>
      <filter name="header-id-mapping"/>
      <filter name="ip-identity"/>
      <filter name="uri-identity"/>
      <filter name="client-authorization" />
      <filter name="rate-limiting" />
      <filter name="versioning" />
      <filter name="compression"/>
      <filter name="api-validator" />
      <filter name="translation" />
      <filter name="service-authentication" />
      <filter name="destination-router" />
      <filter name="uri-stripper" /> 
    </filters>
    <services>
      <service name="dist-datastore"/>
    </services>
    <destinations>
      <!-- Update this endpoint if you want Repose to send requests to a different service -->
      <endpoint id="target" protocol="http" hostname="localhost" root-path="/" port="8080" default="true"/>
    </destinations>
  </repose-cluster>
</system-model>
