<?xml version="1.0" encoding="UTF-8"?>

<!-- To configure Repose see: http://wiki.openrepose.org/display/REPOSE/Configuration -->
<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
  <repose-cluster id="repose">
    <nodes>
        <% for @node in @nodes %>
        <node id="repose_atom-<%= @node[:id] %>" hostname="<%= @node[:address] %>" http-port="7070"/>
        <% end %>
    </nodes>
    <filters>
      <filter name="dist-datastore" />
      <filter name="http-logging" configuration="pre-ratelimit-httplog.cfg.xml" />
      <filter name="rate-limiting" />
      <filter name="client-auth" uri-regex="/(demo|quantum|melange|lbaas|dns|sites|meta|domain)/.*" />
      <filter name="http-logging" configuration="http-logging.cfg.xml" />
      <filter name="translation" />
      <filter name="api-validator" /> 
    </filters>
    <destinations>
      <endpoint id="atomhopper_localhost" protocol="http" hostname="localhost" root-path="" port="8080" default="true"/>
    </destinations>
  </repose-cluster>
</system-model>

