<?xml version="1.0" encoding="UTF-8"?>
<rate-limiting overLimit-429-responseCode="true" xmlns="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0">
    <!--
        Defines an endpoint with a matching regex to bind GET requests for
        returning live rate limiting information.
    -->
    <request-endpoint uri-regex="/limits/?"/>

    <!-- Limits for all other requests -->
    <limit-group id="limited" groups="IP_Standard" default="true">
      <limit uri="/*" uri-regex="/(.*)/events" http-methods="POST" unit="SECOND" value="500" />
      <limit uri="/*" uri-regex="/(identity)/(.*)" http-methods="POST" unit="SECOND" value="500" />
    </limit-group>

    <!-- Limits for WhiteListed IPs -->
    <limit-group id="unlimited" groups="IP_Super" default="false"/>

</rate-limiting>
