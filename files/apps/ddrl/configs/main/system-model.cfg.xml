<?xml version="1.0" encoding="UTF-8"?>

<!-- To configure Repose see: http://wiki.openrepose.org/display/REPOSE/Configuration -->
<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
  <repose-cluster id="repose">
    <nodes>
        <% @nodes.each_index do |index| %>
        <node id="repose-<%= index %>" hostname="<%= @nodes[index] %>" http-port="7070"/>
        <% end %>
    </nodes>
    <filters>
      <filter name="rate-limiting" />
    </filters>
    <services>
      <service name="dist-datastore"/>
    </services>
    <destinations>
      <endpoint id="atomhopper_localhost" protocol="http" hostname="localhost" root-path="" port="8080" default="true"/>
    </destinations>
  </repose-cluster>
</system-model>

