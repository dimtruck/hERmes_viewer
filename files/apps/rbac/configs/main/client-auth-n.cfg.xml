<?xml version="1.0" encoding="UTF-8"?>

<client-auth xmlns="http://docs.rackspacecloud.com/repose/client-auth/v1.0">
  <openstack-auth delegable="false" tenanted="false" token-cache-timeout="600000" group-cache-timeout="600000" xmlns="http://docs.openrepose.org/repose/client-auth/os-ids-auth/v1.0">
  <!--tenanted="false" -->
    <identity-service username="admin" password="password" uri="http://localhost:9090" />
    <!-- Put here DBaas regex to pull client ID from URI -->
    <client-mapping id-regex=".*/v1.0/([-|\w]+)/?.*" />
  </openstack-auth>

  <white-list>
     <!-- Bypass authentication for list versions -->
     <uri-pattern uri-regex="/*$" />

     <!-- Bypass authentication for version details -->
     <uri-pattern uri-regex="/v1.0/*$" />
 </white-list>

</client-auth>
