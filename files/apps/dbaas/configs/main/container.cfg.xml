<?xml version="1.0" encoding="UTF-8"?>

<!-- To configure Repose see: http://wiki.openrepose.org/display/REPOSE/Configuration -->
<repose-container xmlns='http://docs.rackspacecloud.com/repose/container/v2.0'>
    <deployment-config client-request-logging="true" http-port="7070" connection-timeout="30000" read-timeout="30000" proxy-thread-pool="20" >
        <deployment-directory auto-clean="true">/home/repose/deployments</deployment-directory>

        <artifact-directory check-interval="1000">/home/repose/usr/share/repose/filters</artifact-directory>

        <logging-configuration href="log4j.properties"/>

    </deployment-config>
</repose-container>
