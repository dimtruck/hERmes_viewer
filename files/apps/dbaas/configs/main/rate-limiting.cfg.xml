<?xml version="1.0" encoding="UTF-8"?>
<rate-limiting datastore="distributed/hash-ring" overLimit-429-responseCode="false" xmlns="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0">
  <request-endpoint uri-regex="^/v\d+\.\d+/\.+/limits/" include-absolute-limits="false"/>
<limit-group id="default" groups="default_group" default="true">
    <!-- Versions -->
    <limit uri="/*" uri-regex="/$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/$" http-methods="GET" unit="MINUTE" value="100"/>
    <!-- Instances -->
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances$" http-methods="POST" unit="MINUTE" value="20"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances$" http-methods="DELETE" unit="MINUTE" value="20"/>
    <!-- Root User -->
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/root$" http-methods="POST" unit="MINUTE" value="20"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/root$" http-methods="GET" unit="MINUTE" value="100"/>
    <!-- Actions -->
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/action$" http-methods="POST" unit="MINUTE" value="5"/>
    <!-- Databases -->
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/databases$" http-methods="POST" unit="MINUTE" value="20"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/databases$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/databases$" http-methods="DELETE" unit="MINUTE" value="100"/>
    <!-- DB Users -->
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/users$" http-methods="POST" unit="MINUTE" value="50"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/users$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/users/\.+$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/users/\.+/databases$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/users/\.+/databases$" http-methods="PUT" unit="MINUTE" value="50"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/users/\.+/databases/\.+$" http-methods="DELETE" unit="MINUTE" value="50"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/users/\.+$" http-methods="DELETE" unit="MINUTE" value="50"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/users/\.+$" http-methods="PUT" unit="MINUTE" value="50"/>
    <!-- Backups -->
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/instances/.+/backups$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/backups$" http-methods="POST" unit="MINUTE" value="5"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/backups/.+$" http-methods="DELETE" unit="MINUTE" value="5"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/backups/.+$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/backups$" http-methods="GET" unit="MINUTE" value="100"/>
    <!-- Flavors -->
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/flavors$" http-methods="GET" unit="MINUTE" value="100"/>
    <limit uri="/*" uri-regex="/v\d+\.\d+/\d+/flavors/\d+$" http-methods="GET" unit="MINUTE" value="100"/>
</limit-group>
</rate-limiting>
